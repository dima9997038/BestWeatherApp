<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColors"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/logo"
            android:layout_marginTop="50sp"
            android:text="@string/logo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white" android:textSize="28sp" android:textAlignment="center"
            android:fontFamily="@font/montserrat_bold"/>
    <EditText
            android:id="@+id/user_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/hint_user_field"
            android:textColor="@color/design_default_color_background"
            android:textColorHint="@color/textColorHint"
            android:ems="10"
            android:backgroundTint="@color/cardview_light_background"
            android:layout_marginTop="100sp"
            android:layout_marginHorizontal="50sp"
            android:layout_below="@id/logo"
           />
    <Button
            android:id="@+id/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:layout_below="@id/user_field"
            android:layout_marginTop="30sp"
            android:layout_marginHorizontal="100sp"
            android:backgroundTint="@color/design_default_color_on_secondary"
            android:text="@string/main_btn"
            />
    <TextView
            android:id="@+id/result_info"
            android:layout_marginTop="50sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_below="@id/main_btn"
            android:fontFamily="@font/montserrat_bold"/>


</RelativeLayout>